    <global-method-security secured-annotations="enabled"/>
    
	<http auto-config="true" use-expressions="true" 
		  access-denied-page="/pages/loginPage2.jsp">
	
	<intercept-url 
		pattern="/pages/login/**" 
		filters="none" 
		access="permitAll"/>
		
		
		
	<!--authentication-failure page  -->
	<intercept-url 
		pattern="/pages/loginPage.jsp*"  
		filters="none" 
		access="permitAll"/>				
			
	<intercept-url 
		pattern="/resources/**" 
		filters="none" />		
				
	<intercept-url 
		pattern="/pages/**" 
		access="hasRole ( 'ROLE_USER' )"/>	
		
	<intercept-url 
		pattern="/**" 
		filters="none" 
		access="permitAll"/>
			        
	<form-login 

		login-page="/login.jsp"		
		default-target-url="/pages/profile.xhtml"
     	authentication-failure-url="/pages/loginPage.jsp"/>  
    	<logout logout-success-url="/login.jsp" /> 
	</http>		
	
 	<beans:bean id="userDetailsService" 
 	  class="org.travelplan.service.impl.UserDetailsServiceImpl" /> 	
		
	<beans:bean id="daoAuthenticationProvider"
	 class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
	  <beans:property name="userDetailsService" ref="userDetailsService"/>
	</beans:bean>
	
	<beans:bean id="authenticationManager"
	    class="org.springframework.security.authentication.ProviderManager">
	  <beans:property name="providers">
	    <beans:list>
	      <beans:ref local="daoAuthenticationProvider" />
	    </beans:list>
	  </beans:property>
	</beans:bean>
	
	<authentication-manager>	
    	<authentication-provider user-service-ref='userDetailsService'/>
    </authentication-manager>

    
